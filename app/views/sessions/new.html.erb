<header>
    <div class="container">
        <div class="row">
            <div class="col-sm-7">
                <div class="header-content">
                    <div class="header-content-inner">
                        <h1>Workout tracker is an app that helps you achieve your goals!</h1>
												<%= link_to "Sign up now!", "#signup", class: "btn btn-outline btn-xl page-scroll" %>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="login-container">
									<h2>Log in!</h2>
									<%= form_for(:session, url: login_path) do |f| %>
										<label>Email</label>
										<%= f.email_field :email, :placeholder => "Email", class: "form-control" %>
										<label>Password</label>
										<%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
										<%= f.submit "Log in", class: "btn btn-submit" %>
									<% end %>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="signup" class="signup bg-primary text-center">
	<div class="container">
      <div class="row">
          <div class="col-md-8 col-md-offset-2">
						<h2>Sign up!</h2>
						<%= form_for(@user, url: signup_path) do |f| %>
							<label>First name</label>
							<%= f.text_field :first_name, :placeholder => "First name", class: "form-control" %>
							<label>Last name</label>
							<%= f.text_field :last_name, :placeholder => "Last name", class: "form-control" %>
							<label>Email</label>
							<%= f.email_field :email, :placeholder => "Email", class: "form-control" %>
							<label>Password</label>
							<%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
							<%= f.submit "Create an account", class: "btn btn-submit" %>
						<% end %>
          </div>
      </div>
  </div>
</section>
